---
import Layout from '@layouts/Layout.astro';
import Hero from '@components/sections/Hero.astro';
import SplitPanel from '@components/sections/SplitPanel.astro';
import Features from '@components/sections/Features.astro';
import Stats from '@components/sections/Stats.astro';
import { featureLists } from '@data/features';
import { statsLists } from '@data/stats';
import Logos from '@components/sections/Logos.astro';
import { logoLists } from '@data/logos';
import CtaBanner from '@components/sections/CtaBanner.astro';
import Faqs from '@components/sections/Faqs.astro';
import { faqLists } from '@data/faqs';
import RecentPosts from '@components/sections/RecentPosts.astro';
import heroImage from '../assets/images/home/default-hero-2.jpg';
import image from '../content/blog/images/imagination-park.jpg';
import image1 from '../content/blog/images/electric-car-rally.jpg';
import image2 from '../content/blog/images/flower-festival.jpg';
import image3 from '../content/blog/images/hail.jpg';
import image4 from '../content/blog/images/noor-riyadh.jpg';



const seoTitle = "حشود ذكية | SmartCrowds";
const seoDescription = 'نقوم بتوفير خدمات  تنظيم سير الحشود والحراسة الأمنية للأفراد البارزين';

const heroContent = {
    title:  'متخصصون في  تنظيم الحشود وتأمينهم' , 
    description: 'نقوم بتوفير خدمات  تنظيم سير الحشود والحراسة الأمنية للأفراد البارزين',
    // buttons: [
    //     {
    //         text: 'تواصل معنا',
    //         link: '/contact',
    //         target: '_self'
    //     }
    // ],
    backgroundImage: heroImage,
    overlayOpacity: 0.2
}
 

const featuresSection = {
    // eyebrow: "CORE FEATURES",
    title: "ما الذي يميزنا عن غيرنا؟",
    // description: "SmartCrowds gives you a solid foundation with essential features while staying lightweight and customizable. Start with a clean slate and build exactly what you need without the bloat.",
    features: featureLists.main.features,
    // button: {
    //     text: "View Theme Info",
    //     link: "/theme-info",
    //     variant: "primary" as const
    // }
}

const FooterCta = {
    // eyebrow: "Join The Community",
    title: 'Start Building With SmartCrowds Today',
    description: 'SmartCrowds is open-source and constantly improving. Join our community of developers to contribute, get support, or showcase what you\'ve built.',
    hideCta: true,
    button: {
        text: 'Download SmartCrowds',
        link: 'https://github.com/rspisarski/titan-core',
        target: '_blank'
    }
}




import { Image } from 'astro:assets';
import Card from '@components/Card.astro';
import Button from '@components/ui/Button.astro';

---

<Layout footerCta={FooterCta} title={seoTitle} description={seoDescription}>
    <Hero content={heroContent} />

    <section class="relative py-12" style="background-color: var(--color-background);">
        <div class="site-container mx-auto px-4">
          <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-8">
            <Card title="Imagination Park" subtitle="في الرياض" image={image} link="/blog/imagination-park" />
            <Card title="رالي السيارات الكهربائية" subtitle="في العلا" image={image1} link="/blog/electric-car-rally" />
            <Card title="مهرجان الزهور" subtitle="في ينبع الصناعية" image={image2} link="/blog/flower-festival" />
            <Card title="موسم حائل 2020" subtitle="في حائل" image={image3} link="/blog/hail" />
            <Card title="نور الرياض 2022" subtitle="في الرياض" image={image4} link="/blog/noor-riyadh" />

          </div>
       
          {/* View More Button */}
          <div class="mt-12 flex justify-center" data-aos="fade-up" data-aos-delay="200">
            <Button 
              href="/blog" 
              variant="primary"
              class="text-base font-semibold px-6 py-3 rounded-xl shadow-sm hover:shadow-md transition-all duration-300"
            >
              عرض المزيد من أعمالنا
            </Button>
          </div>
        </div>
      </section>
      
      <Features content={featuresSection} padding="base" background="light" />
      
