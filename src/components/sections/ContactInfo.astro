---
import { getBackgroundColor, getTextColor, getPaddingClass } from '@utils/styleUtils';
import type { ThemeColor, PaddingSize } from '@utils/styleUtils';
import { siteConfig } from '@data/config';
import { Mail, Phone, MapPin, Headset } from 'lucide-astro';
import Button from '@components/ui/Button.astro';

export interface Props {
    content?: {
        title?: string;
        description?: string;
        contactInfo?: {
            email?: string;
            phone?: string;
            address?: string;
        };
    };
    background?: ThemeColor;
    padding?: PaddingSize;
    paddingTop?: PaddingSize;
    paddingBottom?: PaddingSize;
}

const { content, background = 'base', padding, paddingTop, paddingBottom } = Astro.props;

const bgColor = getBackgroundColor(background);
const textColor = getTextColor(background);
const paddingClass = getPaddingClass({ padding, paddingTop, paddingBottom });
---
<section class="py-12" style="background-color: var(--color-background-light); overflow-x-hidden;">
    <div class="site-container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
            <div class="text-center mb-12">
                <h2 class="text-3xl md:text-4xl font-bold mb-4" style="color: var(--color-headline);">تواصل معنا</h2>
                <p class="text-lg" style="color: var(--color-body-light);">نحن مستعدون لاستقبال استفساراتك وحجوزاتك على مدار الساعة</p>
            </div>

            <div class="group relative p-8 rounded-2xl shadow-lg border"
                 style="
                    background-color: var(--color-background-light);
                    border-color: var(--color-secondary);
                    color: var(--color-body-light);
                    margin-left: -8px;
                    margin-right: -8px;
                    padding-left: 32px;
                    padding-right: 32px;
                 "
                 data-aos="fade-up"
                 data-aos-delay="100"
                 data-aos-duration="800">
                
                <div class="relative z-20">
                    <div class="space-y-6">
                        <!-- Email -->
                        <div class="flex items-start gap-4">
                            <div class="p-3 rounded-full" style="background-color: var(--color-primary-light);">
                                <Mail class="w-6 h-6" style="color: var(--color-primary-dark);" aria-hidden="true" />
                            </div>
                            <div>
                                <h4 class="text-sm font-medium mb-1" style="color: var(--color-body-light);">البريد الإلكتروني</h4>
                                <a href={`mailto:${siteConfig.Socials.Email}`} 
                                   class="text-lg font-medium transition-colors hover:text-[--color-primary-dark] hover:underline cursor-pointer"
                                   style="color: var(--color-headline);">
                                    {siteConfig.Socials.Email}
                                </a>
                            </div>
                        </div>

                        <!-- Address -->
                        <div class="flex items-start gap-4">
                            <div class="p-3 rounded-full" style="background-color: var(--color-primary-light);">
                                <MapPin class="w-6 h-6" style="color: var(--color-primary-dark);" aria-hidden="true" />
                            </div>
                            <div>
                                <h4 class="text-sm font-medium mb-1" style="color: var(--color-body-light);">العنوان</h4>
                                <a href={`https://maps.google.com/?q=${siteConfig.Socials.Location}`} 
                                   target="_blank"
                                   class="text-lg font-medium transition-colors hover:text-[--color-primary-dark] hover:underline cursor-pointer"
                                   style="color: var(--color-headline);">
                                    {siteConfig.Socials.Location}
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="mt-12 text-center">
                        <p class="mb-4" style="color: var(--color-body-light);">أو تواصل بنا مباشرة عبر</p>
                        <div class="flex flex-col md:flex-row justify-center gap-4">
                            <Button size='lg' variant='primary'
                                   href="https://wa.me/+966502449948"
                                   class="w-full md:w-auto flex items-center justify-center gap-2">
                                <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="white">
                                    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                                </svg>
                                الواتساب
                            </Button>
                            <Button href={`tel:${siteConfig.Socials.Phone}`} 
                                   size='lg' variant='primary'
                                   class="bg-headline w-full md:w-auto flex items-center justify-center gap-2">
                                <Phone class="w-5 h-5" />
                                اتصل بنا
                            </Button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>