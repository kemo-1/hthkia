---
import { footerMenu, legalMenu } from '@data/menu';
import Logo from '@components/Logo.astro';
import Button from '@components/ui/Button.astro';
import { siteConfig } from '@data/config';

interface ButtonProps {
  text: string;
  link: string;
  target?: string;
}

interface Props {
  footerCta?: {
    title: string;
    description: string;
    hideCta: boolean;
    button: ButtonProps;
  };
}

const { footerCta } = Astro.props;

const defaultCta = {
  title: "Ready to get started?",
  description: "Join us today and transform your digital presence with our innovative solutions.",
  hideCta: true,
  button: {
    text: "Contact Us",
    link: "/contact",
    target: "_self"
  }
};

const cta = footerCta || defaultCta;
const currentYear = new Date().getFullYear();
---
<footer class={`pt-${cta.hideCta ? 'large' : 'small'} pb-large`} style="background-color: var(--color-background); color: var(--color-body-base);">
  <div class="site-container mx-auto px-4">
    
    {!cta.hideCta && (
      <div class="text-center mb-16 py-12" style="border-bottom: 1px solid var(--color-secondary-light);">
        <h2 
          class="text-4xl font-bold mb-4" 
          style="color: var(--color-headline);" 
          data-aos="fade-up"
        >
          {cta.title}
        </h2>
        <p 
          class="mb-6 max-w-2xl mx-auto leading-relaxed" 
          style="color: var(--color-body-base);" 
          data-aos="fade-up" 
          data-aos-delay="100"
        >
          {cta.description}
        </p>
        <Button 
          href={cta.button.link} 
          variant="primary"
          size="lg"
          data-aos="fade-up"
          data-aos-delay="200"
          {...(cta.button.target && { target: cta.button.target })}
        >
          {cta.button.text}
        </Button>
      </div>
    )}

    <div 
      class="grid grid-cols-1 md:grid-cols-4 gap-12 pb-12" 
      style="border-bottom: 1px solid var(--color-secondary-light);"
    >
    <div class="col-span-1 text-right">
      <span class="place-self-end block"> 
        <Logo Height="50px" Width="50px"/> 
      </span>
      <p class="mt-4 text-sm leading-relaxed" style="color: var(--color-body-base);">
        تمتع بتجربة استضافة حشود أكثر سلامة وتنظيما
      </p>
    </div>
    

      <div class="col-span-1">
        <h3 class="text-lg font-semibold mb-4" style="color: var(--color-headline);">روابط مهمة</h3>
        <nav>
          <ul class="space-y-2">
            {footerMenu.map(item => (
              <li>
                <a 
                  href={item.link} 
                  class="text-base transition-colors duration-200 hover:text-[var(--color-accent)]"
                  style="color: var(--color-body-base);"
                >
                  {item.name}
                </a>
              </li>
            ))}
          </ul>
        </nav>
      </div>

      {/* Add more columns here if needed */}
    </div>

    <div class="mt-10 flex flex-col md:flex-row justify-between items-center text-sm" style="color: var(--color-body-base);">
      <div>
        © {currentYear} All rights reserved <span class="font-medium" style="color: var(--color-headline);">{siteConfig.companyName}</span> 
      </div>

      <nav class="mt-4 md:mt-0">
        <ul class="flex flex-wrap gap-6">
          {legalMenu.map(item => (
            <li>
              <a 
                href={item.link} 
                class="transition-colors duration-200 hover:text-[var(--color-accent)]"
              >
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </nav>
    </div>
  </div>
</footer>



